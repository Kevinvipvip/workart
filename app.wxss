@import 'utils/iconfont.wxss';

/**app.wxss**/
.container {
  height: 100%;
  overflow: hidden;
}

.nomore, .nodata {
  padding: 30rpx 0;
  text-align: center;
  color: #bbb;
  font-size: 24rpx;
}

.nomore.tabbar, .nodata.tabbar {
  padding-bottom: 140rpx;
}

.tabbar-page {
  padding-bottom: 140rpx;
}

.full-loading {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: #fff;
  z-index: 1500;
}

.full-loading .image {
  width: 155px;
  height: 155px;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: calc(50% - 220rpx);
  background-image: url("data:image/svg+xml;base64,");
}

.navigator-hover {
  pointer-events: none; /* 点击事件直接穿透到下层元素，即跳过这个链接或者按钮 */
}

/* 授权框 start */
.auth-box .authorize-text {
  font-size: 28rpx;
  text-align: center;
  padding-top: 30rpx;
}

.auth-box button {
  width: 50%;
  font-size: 28rpx;
  padding: 0;
  line-height: 2.5;
  background: #8e97b4;
  margin-top: 40rpx;
  color: #fff;
}

.auth-box button:active {
  opacity: 0.8;
}
/* 授权框 end */

.back-home {
  position:fixed;
  bottom:25px;
  right:40rpx;
  font-size:26rpx;
  z-index:2;
  background:#888;
  border-radius:50%;
  opacity:1;
  width:100rpx;
  height:100rpx;
  box-shadow:border-box;
  display:flex;
  justify-content:center;
  align-items:center;
  text-align:center;
  flex-direction:column;
  color:white;
}