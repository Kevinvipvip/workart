page {
    background: #fff;
    font-size: 24rpx;
    color: #333;
    padding-top: 20rpx;
}

.comment {
    display: flex;
    padding: 0 20rpx 20rpx;
    margin-bottom: 15rpx;
    position: relative;
}

.hr {
    position: absolute;
    width: calc(100% - 40rpx);
    border-bottom: 1rpx solid #eee;
    bottom: 0;
}

.comment .header {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    flex-shrink: 0;
    margin-top: 7rpx;
}

.comment > .content {
    flex-grow: 1;
    margin-left: 15rpx;
    position: relative;
}

.comment > .content .c-info {

}

.comment > .content .re-btn {
    position: absolute;
    top: 5rpx;
    right: 15rpx;
    padding:15rpx 30rpx;
    margin:-15rpx -30rpx 0 0;
}

.comment > .content .c-info > .nickname {
    font-size: 28rpx;
}

.comment > .content .c-info > .date {
    font-size: 20rpx;
    color: #999;
    margin-top: 5rpx;
}

.comment > .content .c-info > .text {
    margin: 10rpx 0;
}

.comment > .content .c-info > .re-comment-box {
    background: #f5f5f5;
    padding: 15rpx;
}

.comment .re-comment {
    display: flex;
    padding-bottom: 10rpx;
    margin-bottom: 10rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

.comment .re-comment:last-child {
    border-bottom: none;
    padding-bottom: 0;
    margin-bottom: 0;
}

.comment .re-comment .re-header {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    flex-shrink: 0;
    margin-top: 6rpx;
}

.comment .re-comment .re-info {
    flex-grow: 1;
    margin-left: 15rpx;
    position: relative;
}

.comment .re-comment .re-info .nickname {
}

.comment .re-comment .re-info .date {
    font-size: 20rpx;
    color: #999;
    margin-top: 3rpx
}

.comment .re-comment .re-info .re-re-btn {
    position: absolute;
    top: 5rpx;
    right: 15rpx;
    padding:15rpx 30rpx;
    margin:-15rpx -30rpx 0 0;
}

.comment .re-comment .re-info .re-text {
    line-height: 1.5;
    margin:10rpx 0;
}

.comment .re-comment .re-info .re-text navigator {
    display: inline;
}

.input-box {
    position:fixed;
    width:100%;
    display:flex;
    box-sizing:border-box;
    padding:20rpx;
    font-size: 26rpx;
    bottom:0;
    align-items:center;
    background: #fff;
    z-index: 1;
}

.input-box .re-input {
    background:#f3f3f3;
    flex-grow:1;
    border-radius:40rpx;
    padding-left:1em;
    line-height: 2;
    min-height:70rpx;
}

.input-box .com-btn {
    color:#7085d4;
    flex-shrink:0;
    margin-left:20rpx;
    font-size:28rpx;
}