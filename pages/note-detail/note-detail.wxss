page {
    background: #fff;
    font-size: 24rpx;
    color: #333;
    padding-top: 20rpx;
}

.top {
    display:flex;
    padding:0 25rpx;
    align-items:center;
    justify-content:space-between;
}

.top .left {
    display: flex;
    align-items: center;
    font-weight: bold;
}

.top .header {
    width: 75rpx;
    height: 75rpx;
    margin-right: 10rpx;
    border-radius: 50%;
}

.top button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    font-size: 22rpx;
    font-weight: bold;
    line-height: 1.9;
    padding: 0 25rpx;
    background: #fff;
    color: #d64c69;
    flex-shrink: 0;
    border-radius: 30rpx;
    border: 2rpx solid #d64c69;
    margin-right: 0;
}

.note-swiper {
    width: 100%;
    margin-top: 20rpx;
    height: 800rpx;

}
.note-swiper swiper-item {
}

.note-swiper swiper-item image {
    width: 100%;
    height: 100%;
    vertical-align: bottom;
}

.info {
    padding: 30rpx;
}

.info .desc {
    line-height: 1.6;
    white-space: pre-wrap;
}

.info .icons {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    font-weight: bold;
}

.info .icons .left {
    display: flex;
    justify-content: space-between;
}

.info .icons .left .icon-box {
    position: relative;
    background:transparent;
    border:0;
    padding:0;
    line-height:1;
}

.info .icons .left .icon-box::after {
    border: 0;
}

.info .icons .left .icon-box + .icon-box {
    margin-left: 40rpx;
}

.info .icons .icon-box .iconfont {
    font-size: 40rpx;
}

.info .icons .icon-box .sub {
    display:inline-block;
    vertical-align:top;
    font-size:20rpx;
    position:relative;
    top:5rpx;
    margin-left:4rpx;
    font-weight: normal;
}

.info .icons .icon-box .iconxin2 {
}

.info .icons .icon-box .iconxin1 {
    color: red;
}

.info .icons .icon-box .iconfenxiang {
}

.info .icons .icon-box .iconfavor {
}

.info .icons .icon-box .iconfavorfill {
    color: #ffaf14;
}

.info .comment {
    background: #f5f5f5;
    border-radius: 15rpx;
    padding: 20rpx;
    margin-top: 20rpx;
}

.info .comment .total {
    color: #bbb;
}

.info .comment .item {
    margin-top: 10rpx;
}

.info .comment .item .nickname {
    font-weight: bold;
}

.info .comment .item .content {
}

.info .add-comment {
    margin-top:20rpx;
    color:#bbb;
    min-height:80rpx;
}

.info .add-comment input {
}

.input-box {
    position:fixed;
    width:100%;
    display:flex;
    box-sizing:border-box;
    padding:20rpx;
    font-size: 26rpx;
    bottom:0;
    align-items:center;
    background: #fff;
    z-index: 1;
}

.input-box .re-input {
    background:#f3f3f3;
    flex-grow:1;
    border-radius:40rpx;
    padding-left:1em;
    line-height: 2;
    min-height:70rpx;
}

.input-box .com-btn {
    color:#7085d4;
    flex-shrink:0;
    margin-left:20rpx;
    font-size:28rpx;
}