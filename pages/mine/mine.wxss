/* pages/mine/mine.wxss */

.personal-top{
	height: 180rpx;
	background: #333333;
}
.personal-top image{
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	margin: 30rpx;
	float: left;
}
.personal-top .nick{
	display: block;
	line-height: 180rpx;
	color: #ffffff;
	margin-left: 180rpx;
}
.personal-list{
	background: #ddd;
	position: absolute;
	top: 180rpx;
	left: 0;
	right: 0;
	bottom: 0;
}
.personal-list-box{
	background: #ffffff;
	height: 80rpx;
	line-height: 80rpx;
	margin: 15rpx 30rpx;
	border-radius: 10rpx;
	box-shadow: 1rpx 1rpx 1rpx 1rpx #cccccc;
}
.personal-list-box text{
	font-size: 35rpx;
	margin-left: 20rpx;
}


.logo{
	width: 150rpx;
	height: 46rpx;
	display: block;
	margin: 0 auto;
}
.tip{
	font-size: 24rpx;
	display: block;
	text-align: center;
	color: #fff;
}
.sh-box{
	position: fixed;
	bottom: 30rpx;
	right: 0;
	left: 0;
	z-index: 9999;
}