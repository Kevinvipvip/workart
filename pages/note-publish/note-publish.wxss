page {
    background: #fff;
    font-size: 24rpx;
    color: #333;
    padding: 20rpx 45rpx;
    box-sizing:border-box;
    padding-top: 20rpx;
}

input {
    border-bottom: 1rpx solid #bbb;
    width:100%;
    margin-top:30rpx;
}

/* 上传图片 */
.flex {
    display: flex;
}

.up-pic{
    width: 100%;
    justify-content: center;
}

.pic-box {
    flex-flow: wrap;
}

.ap-box {
    position: relative;
    margin-right: 31rpx;
    margin-bottom: 31rpx;
}

.ap-box:nth-child(3n) {
    margin-right: 0;
}

.add-pic {
    width: 200rpx;
    height: 200rpx;
    position: relative;
    border-radius: 12rpx;
}

.add-pic .img {
    width: 100%;
    height: 100%;
}

.add-pic.plus {
    display:flex;
    justify-content:center;
    align-items:center;
    border:1px solid #ddd;
    box-sizing: border-box;
}

.add-pic.plus .iconfont {
    font-size: 50rpx;
}

/* 删除图片 */
.img-de {
    width:40rpx;
    height:40rpx;
    border-radius:50%;
    position:absolute;
    right:-10px;
    top:-11rpx;
    z-index:1;
}

.hong-contant .teamwork-btn{
    width: 360rpx;
    height: 88rpx;
    border-radius: 50rpx;
    color: white;
    background-color:#14a1fd;
    margin: 0 auto;
    margin-top: 80rpx;
    margin-bottom: 40rpx;
}

.note-content {
    margin-top:25rpx;
    display:block;
    width:100%;
    line-height:1.5;
    min-height:100rpx;
    padding: 0;
}

.pub-btn {
    width: 50%;
    font-size: 28rpx;
    padding: 0;
    line-height: 2.5;
    background: #8e97b4;
    margin-top: 55rpx;
    color: #fff;
}